@inherits LayoutComponentBase

<FluentDesignTheme StorageName="theme" />

<FluentLayout>
    <FluentHeader>
        AeroSim Flight Tracker
        <FluentSpacer />
        @* Aligned to the end *@
        <FluentButton IconEnd="@(new Icons.Regular.Size24.Subtract())" Title="Minimize" Appearance="Appearance.Accent" OnClick="MinimizeApp" />
        <FluentButton IconEnd="@(new Icons.Regular.Size24.Maximize())" Title="Maximize" Appearance="Appearance.Accent" OnClick="MaximizeApp" />
        <FluentButton IconEnd="@(new Icons.Regular.Size24.Dismiss())" Appearance="Appearance.Accent" OnClick="CloseApp" Title="Close" />
    </FluentHeader>
    <FluentStack Orientation="Orientation.Horizontal" Width="100%">
        <FluentNavMenu Width="250" Expanded="true" Collapsible="true">
            <FluentNavLink Icon="@(new Icons.Regular.Size24.Home())" Href="/" Match="NavLinkMatch.All">Home</FluentNavLink>
            <FluentNavLink Icon="@(new Icons.Regular.Size24.AirplaneLanding())" Href="/flownflights">Flights Flown</FluentNavLink>
            <FluentNavLink Icon="@(new Icons.Regular.Size24.AirplaneTakeOff())" Href="/randomflight">Generate Random Flight</FluentNavLink>
            <FluentNavLink Icon="@(new Icons.Regular.Size24.BuildingLighthouse())" OnClick="AircraftWindowOpen">Aircraft</FluentNavLink>
            <img src="./Images/aerosim_logo_white.png" alt="AeroSim Logo" style="width:250px; margin-top:20px;">
        </FluentNavMenu>
        <FluentBodyContent>
            @Body
        </FluentBodyContent>
    </FluentStack>
</FluentLayout>
<FluentToastProvider />
<FluentDialogProvider />
<FluentTooltipProvider />
<FluentMessageBarProvider />
<FluentMenuProvider />
@code {
    protected void CloseApp() => AppState.MainWindow?.CloseApp_Btn();
    protected void MinimizeApp() => AppState.MainWindow?.MinimizeButton_Click();
    protected void MaximizeApp()
    {
        AppState.MainWindow?.MaximizeButton_Click();
        StateHasChanged();
    }
    protected void AircraftWindowOpen() => AppState.MainWindow?.OpenAirportWindow_Click();
}
